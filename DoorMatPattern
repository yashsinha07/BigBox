import sys

def printDoorMat(rows, columns):
    if columns != rows * 3:
        return

    width = columns

    #print the pattern having the top traingle
    for i in range(rows//2):
        pattern = (".|." * (2*i + 1))
        print (pattern.center(width, '-'))

    #print "WELCOME"
    print ("WELCOME".center(width, '-'))

    #print the pattern having the inverted triangle
    rows = i //2
    while i > 0:
        pattern = (".|." * (2*i - 1))
        print (pattern.center(width, '-'))
        i = i - 1
    return

rows = int(sys.stdin.readline())
columns = int(sys.stdin.readline())
printDoorMat(rows, columns)
